<%- model_class = User -%>
<div class="page-header">
  <h1>Sign up</h1>
  <h4>for Technical Support</h4>
</div>

<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, placeholder: "Your Name" %>
  <%= f.input :email, placeholder: 'you@teladoc.com' %>
  <div class="form-actions">
    <%= f.submit 'Sign me up', :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= "Already signed up?" %>
<%= link_to 'Log in', login_path %>
